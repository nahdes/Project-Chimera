# Project Chimera - Environment Variables
# Copy this file to .env and fill in your values

# ==================== Core Configuration ====================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ==================== Database ====================
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://chimera:password@localhost:5432/chimera_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=  # Optional, for cloud deployment

# ==================== LLM APIs ====================
# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-sonnet-4-20250514

# Google (Gemini)
GOOGLE_API_KEY=xxxxx
GEMINI_MODEL=gemini-3-pro

# OpenAI (for moderation)
OPENAI_API_KEY=sk-xxxxx

# ==================== MCP Servers ====================
# Twitter/X
TWITTER_API_KEY=xxxxx
TWITTER_API_SECRET=xxxxx
TWITTER_ACCESS_TOKEN=xxxxx
TWITTER_ACCESS_SECRET=xxxxx
TWITTER_BEARER_TOKEN=xxxxx

# Image Generation (Ideogram)
IDEOGRAM_API_KEY=xxxxx

# Video Generation (Runway/Luma)
RUNWAY_API_KEY=xxxxx
LUMA_API_KEY=xxxxx

# ==================== Blockchain ====================
# Coinbase AgentKit
COINBASE_API_KEY=xxxxx
COINBASE_API_SECRET=xxxxx

# Network (base, ethereum, solana)
BLOCKCHAIN_NETWORK=base
BLOCKCHAIN_RPC_URL=https://mainnet.base.org

# ==================== Services ====================
# Orchestrator
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000

# Worker Pool
WORKER_POOL_SIZE=3
WORKER_TIMEOUT_SECONDS=300

# ==================== Observability ====================
# Prometheus
PROMETHEUS_PORT=9090

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=chimera

# ==================== Budget & Limits ====================
# Cost Management
MAX_DAILY_SPEND_USD=50.00
MAX_TRANSACTION_USD=10.00
VIDEO_GENERATION_BUDGET_USD=20.00

# Rate Limits
MAX_REQUESTS_PER_HOUR=1000
MAX_LLM_TOKENS_PER_DAY=1000000

# ==================== Security ====================
# JWT for API authentication
JWT_SECRET_KEY=your-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Keys for Dashboard
API_KEY_SALT=your-salt-change-this

# ==================== Feature Flags ====================
ENABLE_OPENCLAW=false
ENABLE_AGENTIC_COMMERCE=true
ENABLE_HITL=true
ENABLE_AUTO_POSTING=false  # Safety: require manual approval initially

# ==================== Development ====================
# Tenx MCP Sense (for tracking)
TENX_MCP_SENSE_URL=http://localhost:3000
TENX_MCP_SENSE_ENABLED=true

# Hot Reload
RELOAD=true  # Uvicorn auto-reload in dev
